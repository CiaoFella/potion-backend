commands:
  00_kill_npm_processes:
    command: "pkill -f npm || true"
    ignoreErrors: true
  01_clear_npm_cache:
    command: "npm cache clean --force"
    ignoreErrors: true
  02_npm_install:
    command: "npm install --no-audit --no-fund"
    ignoreErrors: false
  03_tsc_build:
    command: "npm run build"
    ignoreErrors: false